<?xml version="1.0" encoding="utf-8"?><?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/btnImgBack"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-170dp"
                android:src="@drawable/previous" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:text="My Orders"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-29dp"
                android:src="@drawable/open_menu" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offerBody"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <!-- card view -->
                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/offer_card"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <!-- image card view-->
                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/img_card"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/previous" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Title Name"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Weight : 100g"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-20dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Rs. 80.00"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:textAlignment="center">

                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:backgroundTint="#6B00C9"
                                    android:text="Buy" />

                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:backgroundTint="#6B00C9"
                                    android:text="Delete" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <!-- card view -->
                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/offer_card"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <!-- image card view-->
                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/img_card"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/previous" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Title Name"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Weight : 100g"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-20dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Rs. 80.00"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:textAlignment="center">

                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:backgroundTint="#6B00C9"
                                    android:text="Buy" />

                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:backgroundTint="#6B00C9"
                                    android:text="Delete" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <!-- card view -->
                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/offer_card"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <!-- image card view-->
                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/img_card"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/previous" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Title Name"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Weight : 100g"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-20dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Rs. 80.00"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:textAlignment="center">

                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:backgroundTint="#6B00C9"
                                    android:text="Buy" />

                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:backgroundTint="#6B00C9"
                                    android:text="Delete" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userProfileBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">


            <Button
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="125dp"
                android:backgroundTint="#00c988"
                android:text="Next" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
